<?xml version="1.0" encoding="UTF-8"?>
<component type="desktop-application">
  <id>io.github.lunarequest.NightPDF</id>

  <name>NightPDF</name>
  <summary>Dark Mode PDF reader</summary>
  <url type="homepage">https://github.com/Lunarequest/NightPDF</url>
  <content_rating type="oars-1.1" />

  <metadata_license>CC0-1.0</metadata_license>
  <project_license>GPL-2.0-only</project_license>

  <supports>
    <control>pointing</control>
    <control>keyboard</control>
    <control>touch</control>
  </supports>

  <description>
    <p>
      NightPDF is a electron based application that allows one to read PDF files with dark mode. It
      has 3 default filters(monochrome, sepia &amp; redeye) along with a option to generate a custom
      filter along with no filter. NightPDF has a simplistic design that makes it intuitive to use.
    </p>
  </description>

  <launchable type="desktop-id">io.github.lunarequest.NightPDF.desktop</launchable>
  <screenshots>
    <screenshot type="default">
      <image>https://github.com/Lunarequest/NightPDF/blob/mistress/docs/nightpdf.gif?raw=true</image>
    </screenshot>
  </screenshots>
